{
    "name": "Github Release Helper",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "Generate github release notes with 1 click.",
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
      "default_icon": "icons/icon16.png",
      "default_title": "Generate Release Notes"
    },
    "options_ui": {
      "page": "options.html"
    },
    "permissions": [
        "https://github.com/",
        "activeTab",
        "storage"
    ]
}
